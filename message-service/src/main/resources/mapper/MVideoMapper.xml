<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cetasas.message.mapper.MVideoMapper">
    <insert id="insert">
        INSERT INTO `m_video`(`id`, `filename`, `poster`, `content`, `suffix`)
        VALUES (#{id}, #{filename}, #{poster}, #{content}, #{suffix});
    </insert>

    <select id="selectByPrimaryKey" resultType="cn.cetasas.message.pojo.MVideo">
        SELECT * FROM `m_video` WHERE `id` = #{id};
    </select>
</mapper>