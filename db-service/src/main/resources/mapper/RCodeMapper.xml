<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cetasas.db.mapper.RCodeMapper">
    <insert id="insert" parameterType="cn.cetasas.db.pojo.RCode">
        INSERT INTO `r_code` (`r_code`, `r_name`)
        VALUES (#{rCode}, #{rName});
    </insert>

    <resultMap id="RCodeMap" type="cn.cetasas.db.pojo.RCode">
        <id column="r_code" jdbcType="CHAR" property="rCode" />
        <id column="r_name" jdbcType="CHAR" property="rName" />
    </resultMap>

    <select id="getList" resultMap="RCodeMap">
        SELECT * FROM `r_code`
    </select>
</mapper>